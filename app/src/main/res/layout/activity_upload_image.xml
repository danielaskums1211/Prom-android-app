<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadImage">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:id="@+id/layout"
        android:background="#fff9f9">
        <ImageView
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="127dp"
            app:srcCompat="@drawable/logo"
            android:contentDescription="@android:string/untitled"
            />

        <TextView
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="#c29393"
            android:fontFamily="@font/hello"
            android:text="upload photo from gallery/ take a picture of a dress that inspired you:"></TextView>

        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Enter any changes/ extensions                          you'll like to add and etc"
            android:gravity="center"
            android:textSize="20dp"
            android:fontFamily="@font/just_one"
            android:background="@color/white"></EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/gelleryBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/gallery"></ImageButton>


            <ImageButton
                android:id="@+id/cameraBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/add_photo"></ImageButton>

        </LinearLayout>
        <ImageView
            android:id="@+id/takenPhoto"
            android:layout_width="match_parent"
            android:layout_height="400dp"></ImageView>

    </LinearLayout>



</ScrollView>